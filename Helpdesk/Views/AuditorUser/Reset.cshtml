@model string
@{
    ViewData["Title"] = "Reset hesla";
}

<div class="d-flex flex-row justify-content-center mt-5">
    <div class="card shadow-sm p-4 bg-secondary-subtle" style="width: 700px;">
        <div class="text-center my-4">

            @if (ViewBag.ResetFailed != null && (bool)ViewBag.ResetFailed)
            {
                <h3 class="mt-3">Něco se pokazilo</h3>
                <p class="lead text-muted">Heslo nejde v tuto chvíli resetovat.</p>
            }
            else
            {
                <h3 class="mt-3">@Model</h3>
                <p class="lead text-muted mt-3">Nové heslo uživatele. Je třeba změnit co nejdříve.</p>
            }

            <a asp-action="Overview" class="btn btn-primary my-3">
                <i class="bi bi-arrow-left-circle me-1"></i>Zpět na seznam
            </a>
        </div>
    </div>
</div>