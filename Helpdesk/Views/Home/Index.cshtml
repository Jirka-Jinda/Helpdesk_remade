@using Models.Users
@using ViewModels.Ticket
@model IReadOnlyCollection<CategoryViewModel>
@{
    ViewData["Title"] = "Helpdesk";

    string controller = "UserTicket";
    if (User.IsInRole(UserType.Řešitel.ToString()))
        controller = "SolverTicket";
    if (User.IsInRole(UserType.Auditor.ToString()))
        controller = "AuditorTicket";
}
<div class="d-flex justify-content-center mt-3">
    <div style="max-width: 900px; width: 100%;">
        <div class="text-center mb-4">
            <h3>Vyberte typ požadavku</h3>
        </div>

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <a asp-controller="@controller" asp-action="Create" asp-route-category="@item.Category.ToString()" class="text-decoration-none text-dark">
                        <div class="card h-100 shadow-sm p-3 bg-secondary-subtle hover-shadow border-0">
                            <div class="d-flex flex-column align-items-center text-center">
                                <i class="bi @("bi-" + item.Icon) fs-1 mb-3"></i>
                                <h5 class="fw-bold text-wrap">@item.Category.ToString().Replace("_", " ")</h5>
                                <p class="text-muted text-wrap">@item.Description</p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</div>