@using Models.TicketArchive
@using Models.Users
@using Models.Workflows
@model IReadOnlyCollection<TicketArchive>

@{
    string filter = ViewBag.Filter as string ?? "";
}

<div class="d-flex flex-row justify-content-center mt-5">
    <div class="card shadow-sm p-4 bg-secondary-subtle" style="width: 900px;">
        <div class="text-center mb-4">
            <h4>Archiv požadavků</h4>
        </div>

        <form method="get" class="mb-4">
            <div class="input-group">
                <button type="submit" class="input-group-text bg-primary">
                    <i class="bi bi-search text-white" style="font-size: 18px"></i>
                </button>
                <input type="text" name="filter" value="@filter" class="form-control" placeholder="Filtrovat podle názvu nebo kategorie..." />
            </div>
        </form>

        <div class="card shadow-sm">
            <div class="card-body p-0 bg-primary">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Název</th>
                            <th>Kategorie</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var archive in Model)
                            {
                                string route = $"location.href='{@Url.Action("Detail", "Archive", new { archiveId = archive.Id })}'";

                                <tr onclick="@route" style="cursor: pointer;")">
                                    <td class="text-wrap">@archive.Header</td>
                                    <td>@archive.Category.ToString().Replace('_', ' ')</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="2" class="text-center text-muted py-4">Žádné archivované požadavky nebyly nalezeny.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>
