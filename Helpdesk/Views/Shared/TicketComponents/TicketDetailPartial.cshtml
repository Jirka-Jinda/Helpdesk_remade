@using Helpdesk.Views.Shared
@using Models.Tickets
@using Models.Users
@using Models.Workflows
@using Services.Abstractions.Services
@inject IUserService userService
@model Ticket
@{
    ViewData["Title"] = "Detail požadavku";
}

<div class="d-flex flex-row justify-content-center mt-5">
    <div class="card shadow-sm p-4 bg-secondary-subtle" style="width: 700px;">
        <div class="text-center mb-4">
            <h4 class="text-wrap">@Model.Header</h4>
        </div>

        <!-- Ticket Info -->
        <div class="mb-3 p-3 border rounded bg-light">
            <p class="mb-1"><strong>Zadavatel:</strong> @(Model.UserCreated?.UserName ?? Model.UserCreated?.Email)</p>

            <p class="mb-1"><strong>Vytvořeno:</strong> @Model.TimeCreated.ToShortDateString()</p>

            <p class="mb-1">
                <strong>Stav:</strong>
                <wf-badge state="@Model.State"></wf-badge>
            </p>

            @if (Model.Solver != null)
            {
                <p class="mb-1"><strong>Řešitel:</strong> @Model.Solver.UserName</p>
            }

            <p class="mb-1">
                <strong>Priorita:</strong>
                <priority-badge priority="@Model.Priority"></priority-badge>
            </p>

            @if (Model.Deadline != null)
            {
                <p class="mb-1"><strong>Nutné dokončení:</strong> @Model.Deadline.ToString()</p>
            }

            <hr />
            <p style="white-space: pre-wrap;">@Model.Content</p>

            @if (Model.Result != "")
            {
                <hr />
                <p class="mb-1" style="white-space: pre-wrap;"><strong>Výsledek:</strong>@Model.Result</p>
            }
        </div>
        @{
            var user = userService.GetSignedInUser();
            if (user != null && user == Model.UserCreated)
            {
                if (Model.State == WFState.Uzavřený)
                {
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="ArchiveTicket" asp-route-ticketId="@Model.Id" class="btn btn-primary">
                            <i class="bi bi-archive me-1"></i>Archivovat
                        </a>
                        @if (!User.IsInRole(UserType.Řešitel.ToString()))
                        {
                            <a asp-action="ReturnTicket" asp-route-ticketId="@Model.Id" class="btn btn-primary">
                                <i class="bi bi-arrow-return-left me-1"></i>Vrátit k řešení
                            </a>
                        }
                    </div>
                }
                if (Model.State == WFState.Založený || Model.State == WFState.Odmítnutý)
                {
                    <div class="d-flex justify-content-start mt-4">
                        <a asp-action="DeleteTicket" asp-route-ticketId="@Model.Id" class="btn btn-primary">
                            <i class="bi bi-archive me-1"></i>Smazat požadavek
                        </a>
                    </div>
                }
            }
        }


        <!-- Messages Section -->
        <div class="text-center mt-4">
            <h5>Diskuze</h5>
        </div>

        @if (Model.MessageThread.Messages.Any())
        {
            @foreach (var message in Model.MessageThread.Messages)
            {
                <div class="mb-2 p-3 border rounded bg-light">
                    <div class="d-flex justify-content-between mb-2">
                        <span class="fw-bold">@message.UserCreated</span>
                        <small class="text-muted">@message.TimeCreated.ToShortDateString() - @message.TimeCreated.ToString("HH:mm")</small>
                    </div>
                    <p style="white-space: pre-wrap;" class="mb-0">@message.Content</p>
                </div>
            }
        }
        else
        {
            <div class="mb-3 p-3 border rounded bg-light text-center text-muted">
                Žádné komentáře zatím nebyly přidány.
            </div>
        }

        <!-- Comment Form -->
        <form asp-action="PostMessage" method="post" class="mt-4">
            <input type="hidden" name="ticketId" value="@Model.Id" />
            <div class="mb-3">
                <label for="newMessage" class="form-label fw-bold">Přidat komentář</label>
                <textarea class="form-control text-wrap" style="white-space: pre-wrap;" id="newMessage" name="message" rows="3" placeholder="Napište komentář..." required></textarea>
            </div>
            <div class="d-flex justify-content-between">
                <a asp-action="Overview" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left-circle me-1"></i>Zpět na seznam
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-send me-1"></i>Odeslat
                </button>

            </div>
        </form>
    </div>
</div>
