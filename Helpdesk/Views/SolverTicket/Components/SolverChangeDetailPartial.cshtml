@using Models.Tickets
@model (Guid, SolverHistory)

@{
    ViewData["Title"] = "Detail změny řešitele";
    var change = Model.Item2;
}

<div class="d-flex flex-row justify-content-center mt-5">
    <div class="card shadow-sm p-4 bg-secondary-subtle" style="width: 400px;">
        <div class="text-center mb-4">
            <h4>Detail změny řešitele</h4>
        </div>

        <!-- General Information -->
        <div class="mb-3">
            <label class="form-label fw-bold">Vytvořeno</label>
            <div class="p-3 border rounded bg-light">
                <p class="mb-1 text-wrap"><strong>@change.TimeCreated.ToString("g")</strong></p>
                @if (change.TimeUpdated != null)
                {
                    <p class="mb-1 text-muted text-wrap">Upraveno: @change.TimeUpdated?.ToString("g")</p>
                }
                <p class="mb-1 text-wrap">Změnu provedl: <strong>@(change.UserCreated?.UserName ?? "Neznámý")</strong></p>
            </div>
        </div>

        <!-- Solver Information -->
        <div class="mb-3">
            <label class="form-label fw-bold">Nový řešitel</label>
            <div class="p-3 border rounded bg-light">
                @if (change.Solver != null)
                {
                    <p class="mb-1 text-wrap"><strong>@change.Solver.UserName</strong></p>
                }
                else
                {
                    <p class="mb-1 text-muted">Žádný řešitel</p>
                }
            </div>
        </div>

        <!-- Comment -->
        <div class="mb-3">
            <label class="form-label fw-bold">Komentář</label>
            <div class="p-3 border rounded bg-light">
                @if (!string.IsNullOrWhiteSpace(change.Comment))
                {
                    <p class="mb-1 text-wrap">@change.Comment</p>
                }
                else
                {
                    <p class="mb-1 text-muted">Žádný komentář</p>
                }
            </div>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-controller="SolverTicket" asp-action="Detail" asp-route-ticketId=@Model.Item1 asp-route-back="true" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left-circle me-1"></i>Zpět
            </a>
        </div>
    </div>
</div>
