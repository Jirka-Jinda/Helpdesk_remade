@using Models.Tickets
@model Ticket
@{
    ViewData["Title"] = "Detail";
    bool detailActive = true;
    if (ViewBag.Back is not null && (bool)ViewBag.Back)
        detailActive = false;
}
<div class="d-flex justify-content-center mt-3">
    <div style="max-width: 700px; width: 100%;">

        <div class="rounded-top px-3 ">
            <ul class="nav nav-tabs nav-fill" id="ticketTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link @(detailActive ? "active" : "")" id="detail-tab" data-bs-toggle="tab" data-bs-target="#detail"
                            type="button" role="tab" aria-controls="detail" aria-selected="@(detailActive ? "true" : "")">
                        Detail
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link @(detailActive ? "" : "active")" id="workflow-tab" data-bs-toggle="tab" data-bs-target="#workflow"
                            type="button" role="tab" aria-controls="workflow" aria-selected="@(detailActive ? "" : "true")">
                        Řešitelé a workflow
                    </button>
                </li>
            </ul>
        </div>

        <div class="tab-content px-3 rounded-bottom" id="ticketTabContent">

            <!-- Detail Tab -->
            <div class="tab-pane fade @(detailActive ? "show active" : "")" id="detail" role="tabpanel" aria-labelledby="detail-tab">
                @await Html.PartialAsync("~/Views/Shared/TicketComponents/TicketDetailPartial.cshtml", Model)
            </div>

            <!-- Solver + Workflow Tab -->
            <div class="tab-pane fade @(detailActive ? "" : "show active")" id="workflow" role="tabpanel" aria-labelledby="workflow-tab">
                <div class="d-flex flex-column flex-md-row gap-3">
                    <div class="flex-fill">
                        @await Html.PartialAsync("~/Views/SolverTicket/Components/TicketSolverPartial.cshtml", Model)
                    </div>
                    <div class="flex-fill">
                        @await Html.PartialAsync("~/Views/SolverTicket/Components/TicketWorkflowPartial.cshtml", Model)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
