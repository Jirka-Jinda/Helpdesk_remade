@using ViewModels.User
@model ApplicationUserViewModel
@{
    ViewData["Title"] = "Přihlášení";
}

<div class="d-flex flex-row">
    <div class="container d-flex justify-content-center align-items-center">
        <div class="card p-4 shadow-sm" style="width: 400px;">
            <div class="text-center mb-3">
                <h5 class="mt-2">Přihlaste se ke svému účtu</h5>
            </div>

            @if (ViewBag.FailedLogin != null && (bool)ViewBag.LoginFailed)
            {
                <div class="alert alert-danger text-center">
                    Neplatné přihlašovací údaje. Zkuste to prosím znovu.
                </div>
                ViewBag.FailedLogin = false;
            }

            <form method="post" asp-action="Login">
                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold"></label>
                    <input asp-for="Email" class="form-control" required placeholder="Zadejte email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-bold"></label>
                    <input name="password" asp-for="Password" type="password" class="form-control" required placeholder="Zadejte heslo">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-check mb-3">
                    <input name="rememberMe" asp-for="RememberMe" class="form-check-input" type="checkbox" id="rememberMe">
                    <label asp-for="RememberMe" class="form-check-label fw-bold">Zapamatovat přihlášení</label>
                </div>

                <div class="d-flex gap-2 mt-3">
                    <button type="submit" class="btn btn-primary w-100">Přihlásit</button>
                    <a asp-controller="Access" asp-action="Register" class="btn btn-secondary w-100">Registrovat</a>
                </div>
            </form>
        </div>
    </div>
</div>
